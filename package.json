{
  "name": "cf-workers-actions",
  "version": "1.0.2",
  "description": "GitHub Actions for Cloudflare Workers deployment, PR commenting, and cleanup",
  "main": "index.js",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "pnpm run clean && node scripts/build.mjs",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck && pnpm run lint && pnpm test",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "prepare": "pnpm run build",
    "release:check": "pnpm run check && echo 'âœ… Ready for release!'",
    "version": "pnpm run build && git add dist/"
  },
  "keywords": [
    "github-actions",
    "cloudflare",
    "workers",
    "deployment",
    "preview"
  ],
  "author": "harunonsystem",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^24.10.1",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.13",
    "yaml": "^2.8.1"
  }
}
