{
  "name": "cloudflare-actions",
  "version": "1.0.0",
  "description": "GitHub Actions for Cloudflare Workers deployment, PR commenting, and cleanup",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prebuild": "rm -rf dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "oxlint .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm test",
    "validate:actions": "yamllint .github/workflows/*.yml */action.yml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "release:check": "npm run check && echo 'âœ… Ready for release!'",
    "version": "npm run build && git add dist/"
  },
  "keywords": [
    "github-actions",
    "cloudflare",
    "workers",
    "deployment",
    "preview"
  ],
  "author": "harunonsystem",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@vitest/ui": "^3.2.4",
    "oxlint": "^1.16.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
