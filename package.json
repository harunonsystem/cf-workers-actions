{
  "name": "cloudflare-actions",
  "version": "1.0.0",
  "description": "GitHub Actions for Cloudflare Workers deployment, PR commenting, and cleanup",
  "main": "index.js",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "oxlint .",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck && pnpm run lint && pnpm test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "lefthook install && pnpm run build",
    "release:check": "pnpm run check && echo 'âœ… Ready for release!'",
    "version": "pnpm run build && git add dist/",
    "actions:pin": "npx pinact .github/workflows/*.yml",
    "actions:permissions": "npx @pkgdeps/update-github-actions-permissions .github/workflows/*.yml",
    "actions:lint": "ghalint run .github/workflows/",
    "actions:optimize": "pnpm run actions:pin && pnpm run actions:permissions && pnpm run actions:lint"
  },
  "keywords": [
    "github-actions",
    "cloudflare",
    "workers",
    "deployment",
    "preview"
  ],
  "author": "harunonsystem",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "lefthook": "^1.10.4",
    "oxlint": "^1.16.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
