{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "moduleDetection": "auto"
  },
  "include": [
    "src/**/*",
    "preview-setup/src/**/*",
    "workers-cleanup/src/**/*",
    "preview-deploy/src/**/*",
    "comments/src/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/__tests__/**", "**/*.test.ts", "**/tests/**"]
}
